      <tr></tr>
      <tr></tr>
      <tr></tr>
      <tr></tr>
      <tr></tr>
      <tr></tr>
      <tr></tr>
      <tr></tr>
    </table>
    {% endif %}
    <br />
    <div id="detalleLista">
        {{ render(controller('AdministracionBundle:Menu:detalleLista'))  }}
    </div>
    <br>
    <p></p>
</div>

{% endblock %}

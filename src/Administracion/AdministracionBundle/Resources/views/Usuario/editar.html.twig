{% extends '::administracion.html.twig' %}

{% block content %}
<form class="formulario" method="post" action="{{ path('administracion_usuario_editar') }}">
<input type="hidden" name="id" value="{{ usuario.id  }}">
<div id="contenidogeneraladmin">
    <table width="100%" border="0" cellspacing="0" cellpadding="3">
        <tr>
            <td width="84%" align="left"><span class="txt_negro16">{% if usuario is defined and usuario is not null %}Editar{% else %}Nuevo{% endif %} Usuario</span>
                <table width="15%" border="0" align="right" cellpadding="0" cellspacing="0">
                    <tr>
                        <td align="right"><span class="txt_grisclaro11">*Campos Obligatorios</span></td>
                    </tr>
                </table></td>
        </tr>
        <tr>
            <td height="103" align="center" bgcolor="#f1f1f1">
                <table width="100%" border="0" cellspacing="0" cellpadding="5">
                    <tr>
                        <td width="17%" height="29" align="left" class="txt_gris12_bold">{{ form_label(form.perfil) }}</td>
                        <td width="53%" align="left">{{ form_widget(form.perfil) }}
                            <span class="txt_gris12_bold">*</span></td>
                        <td width="30%" align="left" class="txt_gris12_bold">{{ form_errors(form.perfil) }}</td>
                    </tr>
                    <tr>
                        <td height="29" align="left" class="txt_gris12_bold">Sucursal</td>
                        <td align="left">{{ form_widget(form.sucursal) }}
                            <span class="txt_gris12_bold">*</span></td>
                        <td align="left" class="txt_gris12_bold">{{ form_errors(form.sucursal) }}</td>
                    </tr>
                    <tr>
                        <td height="29" align="left" class="txt_gris12_bold">Usuario</td>
                        <td align="left">{{ form_widget(form.username) }}
                            <span class="txt_gris12_bold">*</span></td>
                        <td align="left" class="txt_gris12_bold">{{ form_errors(form.username) }}</td>
                    </tr>
                    <tr>
                        <td height="29" align="left" class="txt_gris12_bold">Contrase&ntilde;a</td>
                        <td align="left">{{ form_widget(form.password) }}
                            <span class="txt_gris12_bold">*</span></td>
                        <td align="left" class="txt_gris12_bold">{{ form_errors(form.password) }}</td>
                    </tr>
                    <tr>
                        <td height="29" align="left" class="txt_gris12_bold">Tel./ Cel</td>
                        <td align="left">{{ form_widget(form.telefono) }}
                            <span class="txt_gris12_bold">*</span></td>
                        <td align="left" class="txt_gris12_bold">{{ form_errors(form.telefono) }}</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <br />
    {{ form_errors(form) }}
    {{ form_rest(form) }}
    <table width="233" height="36" border="0" align="center" cellspacing="3">
        <tr>
            <td width="225" align="center"><div class="btnseccionesact"> <a href="#" class="enviar">Guardar usuario</a></div></td>
        </tr>
    </table>
</div>
</form>
{% endblock %}
